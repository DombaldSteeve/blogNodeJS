<%- include('layouts/head'); -%>    

<header class="masthead" style="background-image: url('assets/img/about-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                
            </div>
        </div>
    </div>
</header>

<form action="/user/login" method="POST">

    <div class="form-floating">

        <input class="form-control" id="name" name="username" type="text" placeholder="Enter the post title..."/>

        <label for="username">Nom</label>

    </div>

    <div class="form-floating">

        <input class="form-control" type="password" name="password" placeholder="Enter the post body..." style="height: 12rem"></input>

        <label for="password">Mot de passe</label>

    </div>

    <br />

    <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Login</button>

</form>




